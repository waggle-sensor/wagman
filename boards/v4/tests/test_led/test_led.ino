void setLedPattern(int *p) {
    for (int i = 0; i < numleds; i++) {
        setLed(i, p[i]);
    }
}

void playAnimation(int frames[][9], int numframes, int duration) {
    for (int count = 0; count < duration; count++) {
        for (int i = 0; i < numframes; i++) {
            setLedPattern(frames[i]);
            delay(80);
        }
    }
}

