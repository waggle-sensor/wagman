cat << EOF > buildinfo.cpp
#define BUILD_TIME $(date +%s)
#define BUILD_GIT "$(git rev-parse HEAD)"
EOF

mkdir -p bin/
arduino-cli compile -v -b arduino:avr:micro -o bin/firmware-3.2.0
