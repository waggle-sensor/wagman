const int leds[] = {12, 11, 2, 3, 5, 6, 7, 8, 9};
const int numleds = sizeof(leds) / sizeof(int);

void setupLeds() {
    for (int i = 0; i < numleds; i++) {
        pinMode(leds[i], OUTPUT);
    }
}

void setLed(int i, int mode) {    
    if (i >= 0 && i < numleds) {
        digitalWrite(leds[i], mode);
    }
}

void setup() {
    setupLeds();
}

