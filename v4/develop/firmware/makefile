ARD_HOME = $(ARDUINO_DIR)
TARGET = firmware
PACKAGE = arduino
ARCH = avr
BOARD = micro
TYPE = m32u4
FLASHER_BAUD_RATE = 57600
PORT = /dev/waggle_sysmon
BOARD_FLASH = $(PACKAGE):$(ARCH):$(BOARD)
BOOT_LOADER_TYPE = avr109
PRE_FLASH_COMMAND = stty -F $(PORT) 1200 hupcl; sleep 5
FLASHER = $(ARD_HOME)/hardware/tools/avr/bin/avrdude
FLASHER_CONFIGS = $(ARD_HOME)/hardware/tools/avr/etc/avrdude.conf
FLASH_BOARD = $(FLASHER) -l flash_avr.log -C$(FLASHER_CONFIGS) -v -p$(TYPE) -c$(BOOT_LOADER_TYPE) -P$(PORT) -b$(FLASHER_BAUD_RATE) -D -Uflash:w:$(BIN_DIR)/$(TARGET).ino.hex:i
BUILD_COMPLETE = mv $(BUILD_DIR)/$(TARGET).ino.hex $(BIN_DIR)/
LINKPORT = $(PORT)
SERIALBAUD = 115200
BOOT_LOADER = $(FLASHER) -C$(FLASHER_CONFIGS) -v -patmega32u4 -cstk500v2 -Pusb -Uflash:w:$(ARD_HOME)/hardware/arduino/avr/bootloaders/caterina/Caterina-Micro.hex:i -Ulock:w:0x2F:m
CC = $(ARD_HOME)/arduino
BUILD_DIR = ./build
BIN_DIR = ./bin
CFLAGS  = --verbose-build --verify

all: clean	$(TARGET)
	make clean

$(TARGET): $(TARGET).ino
	./setbuildtime.sh
	$(CC) --board $(BOARD_FLASH) $(CFLAGS) --pref build.path=$(BUILD_DIR) $(TARGET).ino
	mkdir -p bin
	$(BUILD_COMPLETE)

clean:
	rm -rf $(BUILD_DIR)/*
	rm -f *~


install:	clean	all
	$(PRE_FLASH_COMMAND)
	$(FLASH_BOARD)

program:
	$(PRE_FLASH_COMMAND)
	$(FLASH_BOARD)

reset:
	$(PRE_FLASH_COMMAND)

run:    install
	sleep 2
	screen $(LINKPORT) $(SERIALBAUD)

initialize:
	./timeset.sh
	make install
	sleep 2
	echo "" > rtc_conf.cpp
	make run

connect:
	sleep 3
	screen $(LINKPORT) $(SERIALBAUD)

test:	program
	make connect

docs:
	./generate-command-doc > README.md
